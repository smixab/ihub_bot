# AI Provider Configuration
# Choose your AI provider: 'gemini', 'openai', or 'fallback'
AI_PROVIDER=gemini

# Google Gemini API Configuration (Recommended for corporate use)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Optional: OpenAI API Key (Alternative AI provider)
# If not provided, the application will use built-in fallback responses
OPENAI_API_KEY=your_openai_api_key_here

# School Information (Customize for your institution)
SCHOOL_NAME=Your School Name
SCHOOL_TYPE=University
SCHOOL_FOCUS=Technology and Engineering

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Application Settings
APP_NAME=iHub Bot
APP_VERSION=1.0.0